server {
    listen       ${PORT};
    server_name  _;
    root         /usr/share/nginx/html;
    index        index.html;

    # React SPA: fallback to index.html
    location / {
        try_files $uri /index.html;
    }

    # Cache static assets
    location ~* \.(?:js|css|png|jpg|jpeg|gif|svg|ico)$ {
        expires 1y;
        access_log off;
        add_header Cache-Control "public, immutable";
    }
}
